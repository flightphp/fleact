{
  "name": "flightphp/fleact",
  "description": "ðŸš€ Fleact is a quick and easy React starter template with a FlightPHP backend ðŸ’»ðŸŒâœ¨",
  "license": "MIT",
  "type": "project",
  "require": {
    "flightphp/core": "^3.13",
    "php": ">=7.4"
  },
  "scripts": {
    "build": [
      "composer install --no-dev -o",
      "php -r \"if (!is_dir('node_modules')) `npm i`;\"",
      "npm run build",
      "composer archive"
    ]
  },
  "archive": {
    "exclude": [
      "node_modules",
      "scripts",
      ".editorconfig",
      ".eslintrc.json",
      ".gitignore",
      ".git",
      "biome.json",
      "composer.*",
      "LICENSE",
      "package-lock.json",
      "package.json",
      "README.md",
      "rollup.config.js",
      "jsconfig.json",
      "pnpm-*",
      "main.js",
      "*.jsx",
      "*.tsx",
      "*.map"
    ]
  }
}
